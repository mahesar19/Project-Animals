<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.project.animals">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StoryAppV2">
        <activity android:name="co.project.animals.Splash" android:theme="@style/Theme.StoryAppV2.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="co.project.animals.Details" />
        <activity
            android:name="co.project.animals.MainActivity"
            android:theme="@style/Theme.StoryAppV2.NoActionBar">

        </activity>
    </application>

</manifest>